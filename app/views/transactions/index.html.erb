<h1>All Transactions</h1>

<% if @transactions.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Amount</th>
        <th>Type</th>
        <th>Category</th>
        <th>Account</th>
        <th>Creator</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @transactions.each do |transaction| %>
        <tr>
          <td><%= transaction.title %></td>
          <td><%= number_to_currency(transaction.amount, unit: "â‚¬") %></td>
          <td><%= transaction.transaction_kind.capitalize %></td>
          <td><%= transaction.category&.title || "Uncategorized" %></td>
          <td>
            <% if transaction.main_account.present? %>
              <%= link_to transaction.main_account.title, main_account_path(transaction.main_account) %>
            <% else %>
              <%= link_to transaction.sub_account.title, main_account_sub_account_path(transaction.sub_account.main_account, transaction.sub_account) %>
            <% end %>
          </td>
          <td><%= "#{transaction.creator.first_name} #{transaction.creator.last_name}" %></td>
          <td>
            <%= link_to "Edit", edit_transaction_path(transaction), class: "btn btn-sm btn-primary" %>
            <%= link_to "Delete", transaction_path(transaction), method: :delete, class: "btn btn-sm btn-danger", data: { confirm: "Are you sure?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p class="alert alert-info">No transactions added yet.</p>
<% end %>

<%= link_to "New Transaction", new_transaction_path, class: "btn btn-success" %>
