<div class="card mb-1 shadow-sm bg-light" style="cursor: pointer; max-height: 130px;" onclick="window.location='<%= new_main_account_sub_account_path(main_account) %>';">
  <div class="card-body p-1 d-flex flex-column justify-content-center align-items-center text-center">
    <p class="card-text mb-1">
      <i class="fas fa-info-circle"></i> Available: <%= main_account.available_percentage %>%
    </p>
    <hr class="my-1 w-100">
    <%= link_to new_main_account_sub_account_path(main_account), class: "btn btn-primary btn-sm" do %>
      <i class="fas fa-plus"></i> New
    <% end %>
  </div>
</div>