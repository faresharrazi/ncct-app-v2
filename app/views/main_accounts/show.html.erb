<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0 d-flex align-items-center">
    <%= @main_account.title %>
    <% if @main_account.owner == current_user %>
      <%= link_to edit_main_account_path(@main_account), class: "text-decoration-none ms-2" do %>
        <i class="fas fa-edit text-primary" title="Edit Main Account" style="font-size: 0.75em;"></i>
      <% end %>
    <% end %>
  </h1>
</div>

<div class="d-flex align-items-center mb-4">
  <p class="mb-0 me-3">
    <span class="badge bg-success fs-5" title="Total Balance">
      <%= number_to_currency(@main_account.balance, unit: @main_account.currency) %>
    </span>
  </p>
  <p class="mb-0">
    <span class="badge bg-info fs-5" title="Available Percentage">
      <%= @main_account.available_percentage %>%
    </span>
  </p>
</div>

<%= render 'main_transactions/index' %>