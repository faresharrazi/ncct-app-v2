<% if transactions.empty? %>
  <div class="alert alert-info">
    <i class="fas fa-info-circle me-2"></i>No Transactions added yet.
  </div>
<% end %>

<% if defined?(category) %>
  <%= link_to "New Transaction", new_sub_account_transaction_without_subaccount_path(sub_account_transaction: { sub_account_id: category.sub_account.id, category_id: category.id }), class: "btn btn-success mb-3" %>
<% elsif defined?(sub_account) %>
  <%= link_to "New Transaction", new_sub_account_transaction_without_subaccount_path(sub_account_transaction: { sub_account_id: sub_account.id }), class: "btn btn-success mb-3" %>
<% else %>
  <%= link_to "New Transaction", new_sub_account_transaction_without_subaccount_path, class: "btn btn-success mb-3" %>
<% end %>

<% if transactions.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Title</th>
        <th>Amount</th>
        <th>Account</th>
        <th>Creator</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% transactions.each do |transaction| %>
        <tr>
          <!-- Date -->
          <td>
            <span class="text-muted"><%= l(transaction.created_at, format: :short) %></span>
          </td>

          <!-- Title -->
          <td>
            <%= link_to transaction.title, 
                        main_account_sub_account_sub_account_transaction_path(transaction.sub_account.main_account, transaction.sub_account, transaction), 
                        class: "fw-bold text-decoration-none" %>
          </td>

          <!-- Amount -->
          <td>
            <span class="badge <%= transaction.transaction_kind == 'expense' ? 'bg-danger' : 'bg-success' %>">
              <%= number_to_currency(transaction.amount, unit: transaction.sub_account.main_account.currency) %>
            </span>
          </td>
          
          <!-- Account -->
          <td>
            <% if !current_page?(main_account_sub_account_path(transaction.sub_account.main_account, transaction.sub_account)) %>
              <%= link_to transaction.sub_account.title, main_account_sub_account_path(transaction.sub_account.main_account, transaction.sub_account), class: "fw-bold text-decoration-none" %>
            <% else %>
              <span class="fw-bold"><%= transaction.sub_account.title %></span>
            <% end %>
          </td>

          <!-- Creator -->
          <td>
            <span class="text-muted"><%= transaction.creator.full_name %></span>
          </td>

          <!-- Actions -->
          <td>
            <!-- Repeat Transaction with Edit -->
            <%= link_to new_sub_account_transaction_without_subaccount_path(
                          sub_account_transaction: { 
                            sub_account_id: transaction.sub_account.id,
                            title: transaction.title, 
                            amount: transaction.amount, 
                            transaction_kind: transaction.transaction_kind,
                            category_id: transaction.category_id
                          }
                        ), 
                        class: "text-decoration-none" do %>
              <i class="fas fa-redo-alt text-primary" title="Repeat Transaction with Edit"></i>
            <% end %>

  <!-- Repeat Transaction without Edit -->
  <%= link_to repeat_without_edit_main_account_sub_account_sub_account_transaction_path(transaction.sub_account.main_account, transaction.sub_account, transaction), 
              data: { turbo_method: :post }, 
              class: "text-decoration-none" do %>
    <i class="fas fa-clone text-success" title="Repeat Transaction without Edit"></i>
  <% end %>

            <!-- Edit Transaction -->
            <%= link_to edit_main_account_sub_account_sub_account_transaction_path(transaction.sub_account.main_account, transaction.sub_account, transaction), class: "text-decoration-none" do %>
              <i class="fas fa-edit text-warning" title="Edit Transaction"></i>
            <% end %>

            <!-- Delete Transaction -->
            <%= link_to main_account_sub_account_sub_account_transaction_path(transaction.sub_account.main_account, transaction.sub_account, transaction), 
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this transaction?" }, 
                        class: "text-decoration-none" do %>
              <i class="fas fa-trash-alt text-danger" title="Delete Transaction"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>