<h1>Categories for <%= @sub_account.title %></h1>

<% if @categories.empty? %>
  <div class="alert alert-info">
    <i class="fas fa-info-circle me-2"></i>No Categories added yet.
  </div>
<% end %>

<% if @categories.any? %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <!-- Title -->
          <td>
            <%= link_to category.title, main_account_sub_account_category_path(@sub_account.main_account, @sub_account, category), 
                        class: "fw-bold text-decoration-none" %>
          </td>
          
          <!-- Description -->
          <td>
            <span class="text-muted"><%= category.description.presence || "No description provided." %></span>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<!-- New Category Button -->
<%= link_to "New Category", new_main_account_sub_account_category_path(@sub_account.main_account, @sub_account), 
            class: "btn btn-success mt-3" %>

<!-- Back to SubAccount -->
<%= link_to "Back", main_account_sub_account_path(@sub_account.main_account, @sub_account), 
            class: "btn btn-secondary mt-3" %>
