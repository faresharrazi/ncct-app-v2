<div class="container">
    <nav class="nav nav-pills nav-justified">
        <a class="nav-link <%= 'active' if params[:section] == 'profile' %>" href="<%= settings_path(section: 'profile') %>">Edit Profile</a>
        <a class="nav-link <%= 'active' if params[:section] == 'preferences' %>" href="<%= settings_path(section: 'preferences') %>">Preferences</a>
        <a class="nav-link <%= 'active' if params[:section] == 'cancel_account' %>" href="<%= settings_path(section: 'cancel_account') %>">Cancel Account</a>
    </nav>
    <% case params[:section] %>
        <% when 'profile' %>
            <%= render 'devise/registrations/edit', resource: @resource, resource_name: @resource_name %>
        <% when 'preferences' %>
            <%= render 'preferences' %>
        <% when 'cancel_account' %>
            <%= render 'cancel_account', resource: @resource, resource_name: @resource_name %>
    <% else %>
        <%= render 'devise/registrations/edit' %>
    <% end %>
</div>