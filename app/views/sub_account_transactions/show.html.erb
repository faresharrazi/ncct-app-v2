  <div class="card shadow-sm" style="max-width: 600px; margin: 0 auto;">
    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <h1 class="h5 mb-0 me-3"><%= @sub_account_transaction.title %></h1>
      </div>
      <small><%= @sub_account_transaction.created_at.strftime('%B %d, %Y - %H:%M') %></small>
    </div>

    <div class="card-body">
      <!-- Description -->
      <p class="mb-3">
        <span class="text-muted"><%= @sub_account_transaction.description.presence || "No description provided" %></span>
      </p>

      <!-- Amount, Category, and Account Badges -->
      <div class="d-flex gap-2 mb-3">
        <span class="badge <%= @sub_account_transaction.transaction_kind == 'expense' ? 'bg-danger' : 'bg-success' %> align-middle">
          <%= number_to_currency(@sub_account_transaction.amount, unit: @sub_account_transaction.sub_account&.main_account&.currency || "â‚¬") %>
        </span>
        <%= link_to @sub_account_transaction.category&.title || "Uncategorized", 
                    main_account_sub_account_category_path(@sub_account_transaction.sub_account.main_account, @sub_account_transaction.sub_account, @sub_account_transaction.category), 
                    class: "badge bg-info text-decoration-none align-middle" %>
        <%= link_to @sub_account_transaction.sub_account.title, 
                    main_account_sub_account_path(@sub_account_transaction.sub_account.main_account, @sub_account_transaction.sub_account), 
                    class: "badge bg-secondary text-decoration-none align-middle" %>
      </div>

      <!-- Creator -->
      <p class="mb-0">
        <i class="fas fa-user me-2"></i>
        <span class="text-muted"><%= @sub_account_transaction.creator.first_name %> <%= @sub_account_transaction.creator.last_name %></span>
      </p>
    </div>

    <div class="card-footer d-flex justify-content-between">
      <div>
        <%= link_to "Edit", edit_main_account_sub_account_transaction_path(@sub_account_transaction.sub_account.main_account, @sub_account_transaction.sub_account, @sub_account_transaction), 
                    class: "btn btn-primary btn-sm me-2" %>
        <%= link_to "Delete", main_account_sub_account_transaction_path(@sub_account_transaction.sub_account.main_account, @sub_account_transaction.sub_account, @sub_account_transaction), 
                    data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this Transaction?" },
                    class: "btn btn-danger btn-sm" %>
      </div>
      <%= link_to "Back", main_account_sub_account_transactions_path(@sub_account_transaction.sub_account.main_account, @sub_account_transaction.sub_account), 
                  class: "btn btn-secondary btn-sm" %>
    </div>
  </div>
