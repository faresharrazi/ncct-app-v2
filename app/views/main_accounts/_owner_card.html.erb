<div class="card mb-2">
  <div class="card-body p-1">
    <h6 class="card-title mb-1 d-flex align-items-center" style="font-size: 0.8rem;">
      <i class="fa fa-user me-1"></i>
      <% if owner == current_user %>
        You
      <% else %>
        <%= owner.first_name %>
      <% end %>
    </h6>
    <p class="card-text mb-0 d-flex align-items-center" style="font-size: 0.8rem;">
      <i class="fa fa-exchange-alt me-1"></i>
      <%= main_account.main_transactions.where(creator_id: owner.id).count + main_account.sub_accounts.joins(:sub_account_transactions).where(sub_account_transactions: { creator_id: owner.id }).count %>
    </p>
  </div>
</div>